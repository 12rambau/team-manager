{% extends (app.token.providerKey == 'admin') ? 'admin.layout.html.twig': 'layout.html.twig' %}

{% block title %}
	{{ event.slug }}
	Results
{% endblock %}

{% block page_title %}
	<h1>
		<span class="badge badge-{{ event.tag.color }}">{{event.tag.name|slice(0,3)|raw}}.</span> {{ event.name }} Results
	</h1>
{% endblock %}

{% block content %}

	<h2>Score</h2>
	{{ form_start(form) }}

	<div class="form-row align-items-center">

		<div class="form-group col-auto">
			{{ club_name }}
		</div>

		<div class="form-group col-auto">
			{{ form_widget(form.our, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="form-group col-auto">
			-
		</div>

		<div class="form-group col-auto">
			{{ form_widget(form.their, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="form-group col-auto">
			{{ form_widget(form.opponent, {'attr': {'class': 'form-control', 'placeholder':'opponent name'}}) }}
		</div>

		{{ form_rest(form)}}

		<button typ="submit" name="stat-add" class=" form-group btn btn-success">submit</button>

	</div>
	{{ form_end(form) }}
	<hr>

	<h2>Files</h2>

{% endblock %}
