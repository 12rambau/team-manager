{% extends 'layout.html.twig' %}

{% block title %}Event index
{% endblock %}

{% block page_title %}
	<h1>Event index</h1>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('event') }}
{% endblock %}

{% block content %}

	{{ form_start(form, {'attr': {'data-page': page} }) }}

	{{ form_errors(form) }}

	<div class="">
		<button type="submit" name="listParticpation-update" class="btn btn-block btn-success">save changes</button>
		<hr/>
	</div>

	<div class="row">
		<div class="col-12">
			{% for event in events %}
				{% include 'event/index_card.html.twig' with { event:event, index:loop.index0, participations: participations, form:form} only %}
			{% endfor %}
		</div>
	</div>

	{{ form_rest(form) }}

	{{ form_end(form) }}

	<hr/>

	<div class="row">
		<nav class="col-lg-6">
			<ul class="pagination">
				<li class="page-item {% if page == 1 %}disabled{% endif %}">
					<a class="page-link" href="{{ path('event-index', {'page': page-1}) }}">Previous</a>
				</li>
				{% for i in max(page-3,1)..min(page+3,maxPage) %}
					<li class="page-item {% if i == page %}active{% endif %}">
						<a class="page-link" href="{{ path('event-index', {'page': i}) }}">{{ i }}</a>
					</li>
				{% endfor %}
				<li class="page-item {% if page == maxPage %}disabled{% endif %}">
					<a class="page-link" href="{{ path('event-index', {'page': page+1}) }}">Next</a>
				</li>
			</lu>
		</nav>
		<div class="col-lg-6">Result
			{{ (page-1) * nbEventPerPage }}
			-
			{{ min(page * nbEventPerPage,nbEvent) }}
			from
			{{ nbEvent }}
			Events</div>
	</div>

{% endblock %}

{% block aside %}
	<div class="card shadow">
		<div class="card-header">
			<p class="card-title"><span class="fas fa-filter"/>Filter events</p>
		</div>
		<div class="card-body">
			<div class="card-body">
				<ul id="tag-list" class="list-unstyled" data-tags={{ tags|length }}>
					<li class="m-1 border-bottom">
						<div id="check-all-tag" class="btn btn-sm btn-white">
							<span class="far fa-check-square">
								check all</span>
							<div></li>
							{% for tag in tags %}
								<li class="m-1">
									<div id="tag-button-{{ loop.index0 }}" data-color="{{ tag.color }}" class="btn btn-sm btn-{{ tag.color }}">
										<span id="tag-check-{{ loop.index0 }}" class="far fa-check-square">
											{{ tag.name }}</span>
										<div></li>
									{% endfor %}
								</li>
							</ul>
						</div>
					</li>
				</div>
			</div>

		{% endblock %}

		{% block javascripts %}

			{{ parent() }}

			{{ encore_entry_script_tags('event') }}

			{#<script src="{{ asset('js/event/changeCheck.js') }}"></script>#}

		{% endblock %}
