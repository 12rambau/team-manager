{% extends 'layout.html.twig' %}

{% block title %}
	{{ 'event.calendar.title'|trans }}
{% endblock %}

{% block page_title %}
	<h1>
		{{ 'event.calendar.title'|trans }}
	</h1>
{% endblock %}

{% block content %}
	<div>
		<div id="calendar"></div>
	</div>

{% endblock %}

{% block aside %}
	<div class="card">
		<div class="card-header">
			<p class="card-title">
				<span class="fas fa-info mr-1"/>
				{{ 'event.calendar.legend'|trans }}
			</p>
		</div>
		{# TODO change the legend #}
		<div class="card-body">
			<ul id="tag-list" class="list-unstyled" data-tags={{ tags|length }}>
				<li class="m-1 border-bottom">
						<div id="check-all-tag" class="btn btn-sm btn-white">
							<span class="far fa-check-square"> check all</span>
						<div>
				</li>
				{% for tag in tags %}
					<li class="m-1">
						<div id="tag-button-{{ loop.index0 }}" data-color="{{ tag.color }}" class="btn btn-sm btn-{{ tag.color }}">
							<span id="tag-check-{{ loop.index0 }}" class="far fa-check-square"> {{ tag.name }}</span>
						<div>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	{{ encore_entry_script_tags('calendar') }}
{% endblock %}
