<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>
			{% block title %}
			{{ 'base.title'|trans }}
			{% endblock %}
		</title>

		{% block stylesheets %}
			<link rel="shortcut icon" type="image/png" href="{{ asset('image/default/favicon.png')|imagine_filter('favicon') }}"/>
			
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

	</head>

	{% block navbar %}{% endblock %}

	<body class="bg-light pt-0">
		<!-- c'est certain il existe une meilleure faÃ§on de faire mais pour l'instant la flemme -->
		<div class="row align-items-center justify-content-center col-12">
			{% for key in app.session.flashbag.keys %}
				{% for message in app.session.flashbag.get(key) %}
					<div class="alert alert-{{ key }} alert-dismissible text-center" role="alert" style="z-index: 10000; width: 50%; margin-top: 15px">
						<button type="button" class="close" data-dismiss="alert" aria-label="close">
							<span aria-hidden="true">&times;</span>
						</button>
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
		</div>

		{% block body %}
			{# all the views will be included in this block #}
		{% endblock %}

		{% block javascripts %}
			<script type="text/javascript">
				var locale = "{{ app.request.locale }}";
			</script>

			{# wait for the dev to modernise their bundle #}
			<script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
			<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

			{{ encore_entry_script_tags('app') }}
		{% endblock %}

	</body>
</html>
