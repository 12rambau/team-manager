{% extends 'admin.layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset("css/admin/login.css") }}" type="text/css"/>

<style type="text/css">
body {
    background: transparent url('{{ asset('picture/default/login.jpg') }}')  no-repeat center fixed;
    background-size: cover;
}
</style>
{% endblock %}

{% block navbar %}
{#empty the navbar block #}
{% endblock %}

{% block sidebar %}
{% endblock %}


{% block body %}
<div class="row h-100">
    <div class="col-md-6"></div>
    <div id="admin" class="col-md-6">
        <form method="post" class="form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h2 class="form-heading"> Admin Log in</h2>
            <div class="form-group">
                <label class="sr-only" for="inputUsername">Username</label>
                <input class="form-control" type="text" value="{{ last_username }}" name="username" id="inputUsername" placeholder="Username" required autofocus>
            </div>
            <div class="form-group">
                <label class="sr-only" for="inputPassword" >Password</label>
                <input class="form-control" type="password" name="password" id="inputPassword"  placeholder="Password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-lg btn-primary btn-block" type="submit"> Log in </button>

            <div>
                <a href="{{ path('forgotten_password') }}"> forgotten password</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}
