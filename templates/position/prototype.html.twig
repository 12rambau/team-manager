<div id="{{ form.vars.id }}" class="row">
    <button class="btn btn-danger col-1" onClick="removePosition(event);">
        <span class=""><i class="fas fa-trash-alt"></i></span>
    </button>

    <div class="form-group col-3">
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder':'Name'}}) }}
    </div>
    
    <div class="form-group row col-4">
        {% set horizontal = (form.horizontal.vars.value == "") ? 0 : form.horizontal.vars.value %}
        <span class="col-1"><i class="fas fa-arrows-alt-h"></i></span>
        {{ form_widget(form.horizontal, {'attr': {'value': horizontal}}) }}
    </div>
    
    <div class="form-group  row col-4">
        {% set vertical = (form.vertical.vars.value == "") ? 0 : form.vertical.vars.value %}
        <span class=""><i class="fas fa-arrows-alt-v"></i></span>
        {{ form_widget(form.vertical, {'attr': {'value': vertical}}) }} 
    </div>
</div>
