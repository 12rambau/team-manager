{% extends 'layout.html.twig' %}

{% block title %}contac information{% endblock %}

{% block content %}
    <div class="jumbotron text-center">
        <h1>Contact information</h1>
    </div>
    
    <div class="col-lg-12 row">
        <div class="col-lg-4">
            <strong>{{ club_name }}</strong><br>
            {{ contact.name }}<br>
            {{ contact.city }}, {{ contact.county}}, {{ contact.postcode }}<br>
            {{ contact.country }}<br>
        </div>
        <div class="col-lg-8">
            <div id="map"></div>
        </div>
    </div>
    <div class="row">
        <input id="lat" class="d-none" value="{{ contact.lat }}">
        <input id="lng" class="d-none" value="{{ contact.lng }}">
    </div>

    <hr>

    <h1>Contact us</h1>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-4">

                <div class="form-group row">
                    {{ form_errors(form.subject) }}
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group row">
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group row">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

            </div>

            <div class="form-group col-lg-8">
                {{ form_errors(form.message) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows':'15'}}) }}
            </div>

        </div>

        {{ form_rest(form) }}

        <input type="submit" class="btn btn-primary btn-block" value="Submit">

    {{ form_end(form) }}


{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        lat = document.getElementById('lat');
        lng = document.getElementById('lng');
    </script>

    <script src="https://unpkg.com/leaflet@1.4.0/dist/leaflet.js" integrity="sha512-QVftwZFqvtRNi0ZyCtsznlKSWOStnDORoefr1enyq5mVL4tmKB3S/EnC3rRJcxCPavG10IcrVGSmPh6Qw5lwrg==" crossorigin=""></script>
    <script src="{{ asset('js/event/leaferMap.js') }}"></script>

{% endblock %}
