{% extends 'layout.html.twig' %}

{% block title %}contact information
{% endblock %}

{% block page_title %}
	<h1>Contact information</h1>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('contact') }}
{% endblock %}

{% block content %}
	<div class="col-lg-12 row">
		<div class="col-lg-4">
			<strong>{{ club_name }}</strong><br>
			{{ contact.name }}<br>
			{{ contact.city }},
			{{ contact.county}},
			{{ contact.postcode }}<br>
			{{ contact.country }}<br>
		</div>
		<div class="col-lg-8">
			<div id="map"></div>
		</div>
	</div>
	<div class="row">
		<input id="lat" class="d-none" value="{{ contact.lat }}">
		<input id="lng" class="d-none" value="{{ contact.lng }}">
	</div>

	<hr>

	<h1>Contact us</h1>

	{{ form_start(form) }}
	<div class="row">
		<div class="col-lg-4">

			<div class="form-group row">
				{{ form_errors(form.subject) }}
				{{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group row">
				{{ form_errors(form.name) }}
				{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="form-group row">
				{{ form_errors(form.email) }}
				{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
			</div>

		</div>

		<div class="form-group col-lg-8">
			{{ form_errors(form.message) }}
			{{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows':'15'}}) }}
		</div>

	</div>

	{{ form_rest(form) }}

	<input type="submit" class="btn btn-primary btn-block" value="Submit">

	{{ form_end(form) }}


{% endblock %}

{% block javascripts %}
	

	<script type="text/javascript">
		lat = document.getElementById('lat');
        lng = document.getElementById('lng');
	</script>

    {{ parent() }}

    {{ encore_entry_script_tags('contact') }}

{% endblock %}
