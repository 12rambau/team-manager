{% extends 'layout.html.twig' %}

{% block title %}
	{{ 'contact.title'|trans }}
{% endblock %}

{% block page_title %}
	<h1>{{ 'contact.title'|trans }}</h1>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('contact') }}
{% endblock %}

{% block content %}
	<div class="col-lg-12 row">
		<div class="col-lg-4">
			<strong>{{ club_name }}</strong><br>
			{% include 'default/contact-adress.html.twig' with {'contact': contact} only %}
		</div>
		<div class="col-lg-8">
			<div id="map"></div>
		</div>
	</div>
	<div class="row">
		<input id="lat" class="d-none" value="{{ contact.lat }}">
		<input id="lng" class="d-none" value="{{ contact.lng }}">
	</div>

	<hr>

	<h1>{{ 'contact.label'|trans }}</h1>

	{{ form_start(form) }}
	<div class="row">
		<div class="col-lg-4">

			{{ form_row(form.subject) }}

			{{ form_row(form.name) }}

			{{ form_row(form.email) }}

		</div>

		<div class="form-group col-lg-8">
			{{ form_row(form.message) }}
		</div>

	</div>

	{{ form_rest(form) }}

	<input type="submit" class="btn btn-primary btn-block" value="{{ 'form.submit'|trans }}">

	{{ form_end(form) }}


{% endblock %}

{% block javascripts %}
	

	<script type="text/javascript">
		lat = document.getElementById('lat');
        lng = document.getElementById('lng');
	</script>

    {{ parent() }}

    {{ encore_entry_script_tags('contact') }}

{% endblock %}
