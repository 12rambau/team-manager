<footer class="jumbotron bg-dark text-muted pt-4 pb-3 mt-4 mb-0">
	<small>
		<div class="row">

			{# club information #}
			<div class="col-3">
				<div class="row">
					<div class="col-4">
						<img class="img-fluid mb-3 mb-lg-0" src="{{ asset('image/default/no-logo.png')|imagine_filter('navbar') }}" alt="">
					</div>
					<div class="col-8">
						<h5 class="text-primary">{{ club_name }}</h5>
						{{ render(controller('App\\Controller\\DefaultController::ContactAdress')) }}
					</div>
				</div>
			</div>

			{# contact #}
			<div class="col-3">
				<h5 class="text-primary">{{ 'footer.follow'|trans }}</h5>
				<div class="social-icons">
					{{ render(controller('App\\Controller\\DefaultController::Social')) }}
				</div>
				<h5 class="text-primary mt-2">{{ 'contact.label'|trans }}</h5>
				<ul id="contact-footer">
					<li>
						<a class="text-muted" href="">{{ 'footer.contact.map'|trans }}</a>
					</li>
					<li>
						<a class="text-muted" href="">{{ 'footer.contact.contact'|trans }}</a>
					</li>
				</ul>
			</div>

			{# newsletter#}
			<div class="col-3">
				<h5 class="text-primary mb-2">{{ 'footer.newsletter.title'|trans }}</h5>
				<input type="email" class="form-control" placeholder="{{ 'footer.newsletter.placeholder'|trans }}">
			</div>

			{# github project #}
			<div class="col-3">
				<p class="text-center">
					Copyright
					<span class="far fa-copyright mr-1 ml-1"/>
					{{ club_name }}, 2019
				</p>
				<p>
				{{ 'footer.github.message'|trans|raw }}
				</p>
				<div class="row">
					<div class="col-8">
						{{ 'footer.github.link'|trans }}
					</div>
					<div class="social-icons col-4">
						<a href="https://github.com/12rambau/team-manager">
							<i class="fab fa-github"></i>
						</a>
					</div>
				</div>
			</div>

		</div>
	</small>
</footer>
