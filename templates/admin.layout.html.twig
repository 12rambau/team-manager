{% endblock %}



 {% block sidebar %}
    <!-- Sidebar Holder -->
    <nav id="sidebar">
        <ul class="list-group">
            <li class="list-group-item"><a href="{{ path('admin-blog-index') }}">Blog Posts</a></li>
            <li class="list-group-item"><a href="{{ path('admin-chat-index') }}">Chat messages</a></li>
            <li class="list-group-item"><a href="{{ path('admin-comment-index') }}">Comments</a></li>
            <li class="list-group-item"><a href="{{ path('tag-index', {}) }}">Event tags</a></li>
