{% endblock %}
        
{% block navbar %}
    
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-primary">
    <a class="navbar-brand" href="{{ path('home') }}">TeamManager</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <button type="button" id="sidebarCollapse" class="btn btn-secondary">
                    <i class="fas fa-align-left"></i>
                    <span>Toggle Sidebar</span>
                </button>
            </li>
        </ul>
        <div class="navbar-nav">
            <div class=" nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="{{ path('profile-edit', {'username':app.user.username}) }}" id="DropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret">{{ app.user.username }}</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="DropdownProfile">
                    <a class="dropdown-item" href="{{ path('profile-edit', {'username':app.user.username}) }}">Profile</a>
                    <hr/>
                    <a class="dropdown-item" href="{{ path('logout') }}"><span class="fas fa-off"/>logout</a>
                </div>
            </div>
        </div>
    <div>
</nav>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">

        $(document).ready(function () {

            $("#sidebar").mCustomScrollbar({
                theme: "minimal"
            });

            $('#sidebarCollapse').on('click', function () {
                // open or close navbar
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
                // close dropdowns
                $('.collapse.in').toggleClass('in');
                // and also adjust aria-expanded attributes we use for the open/closed arrows
                // in our CSS
                $('a[aria-expanded=true]').attr('aria-expanded', 'false');
            });

        });
	
    </script>

{% endblock %}
