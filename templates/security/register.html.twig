{% extends 'base.html.twig' %}

{% block title %}Sign up!{% endblock %}

{% block body %}

<form method="post">
    <h1 class="h3 mb-3 font-weight-normal">Please register</h1>
    <label for="inputUsername" class="sr-only">Username</label>
    <input type="text" value="username" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" value="email" name="email" id="inputemail" class="form-control" placeholder="email@domain.ext" required>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

    <button class="btn btn-lg btn-primary" type="submit">
        Register
    </button>
</form>
{% endblock %}
