{% extends 'layout.html.twig' %}

{% block title %}{{ 'blog.edit.title'|trans({'%action%': action}) }} - {{ post.title }}{% endblock %}

{% block page_title %}
	<h1>
		{{ 'blog.edit.title'|trans({'%action%': action}) }}
	</h1>
{% endblock %}

{% block content %}
	
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
		{{ form_errors(form) }}

		{{ form_row(form.title) }}
		{{ form_row(form.short) }}
		{{ form_row(form.gallery) }}
		{{ form_row(form.content) }}
		
		<hr>
		{{ form_row(form.save) }}

		{{ form_rest(form) }}
	
	{{ form_end(form) }}


{% endblock %}

{% block javascripts %}
	{{ parent() }}

	{{ encore_entry_script_tags('blog') }}
{% endblock %}
