{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('css/default/style.css') }}" type="text/css"/>
	<link rel='stylesheet' href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.css"/>
{% endblock %}

{% block navbar %}
	<div class="row bg-white">
		<div id="logo" class="col-3 text-center">
			<a href="{{ path('home') }}"><img class="img-fluid mb-3 mb-lg-0" src="{{ asset('image/default/no-logo.png')|imagine_filter('navbar') }}" alt=""></a>
		</div>
		<div class="jumbotron col-8">
			{% block page_title %}
				<h1>Page title</h1>
			{% endblock %}
		</div>
	</div>
	{% include "default/navBar.html.twig" with { 'navId':'mainNav'} %}
	{% include "default/navBar.html.twig" with { 'navId':'secondNav'} %}
{% endblock %}

		{% block body %}
			<div class="container-fluid row mt-2">
				<div class="col-9">
					{% block content %}{% endblock %}
				</div>
				<div class="col-3">
					{% block aside %}
						<div class="card">
							<div class="card-header">
								<p class="card-title"><span class="fas fa-calendar"/>
									Events</p>
							</div>
							<div id="aside-calendar" class="card-body">
								<div class="small">
									<div id="mini-calendar"></div>
								</div>
							</div>
						</div>
					{% endblock %}
				</div>
			</div>

			{% block chat %}
				{{ render(controller('App\\Controller\\ChatController::show')) }}
			{% endblock %}
		{% endblock %}

		{% block javascripts %}

			{{ parent() }}

			<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.js"></script>
			<script src="{{ asset('js/fullcalendar/miniCalendar.js') }}"></script>
			<script src="{{ asset('js/default/default.js') }}"></script>
			<script src="{{ asset('js/chat/chat.js') }}"></script>

			<script type="text/javascript">
				$(document).ready(function () {
					$('[data-toggle="tooltip"]').tooltip();
  					$('[data-toggle="popover"]').popover();
				});
			</script>
		{% endblock %}
