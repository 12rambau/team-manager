{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/default/style.css') }}" type="text/css"/>
{% endblock %}

{% block navbar %}
<nav class="navbar sticky-top navbar-expand-lg navbar-light bg-primary">
    <a class="navbar-brand" href="#">TeamManager</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav mr-auto">
            <a class="nav-item nav-link" href="{{ path('home') }}">Home</a>
        </div>
    </div>
    <div class="navbar-nav ml-auto">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div class=" nav-item dropdown">
                <div class=" dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret">{{ app.user.username }}</span>
                </div>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Profile</a>
                    <p class="dropdown-tem divider"><p>
                    <a class="dropdown-item" href="{{ path('logout') }}"><span class="glyphicon glyphicon-off"/>logout</a>
                </div>
            </div>
        {% else %}
            <a class="nav-item nav-link" href="{{ path('login') }}">login</a>
        {% endif %}
    </div>
</nav>
{% endblock %}

{% block body %}
    <div class="container-fluid row">
        <div class="col-9">
            {% block content %}
            {% endblock %}
        </div>
        <div class="col-3">
            {% block aside %}
                <div class="card">
	                <div class="card-header">
		                <p class="panel-title"><span class="fas fa-comment"/> Chat</p>
	                </div>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	                    <div id="chatwindow" class="card-body">
		                    {{ render(controller('App\\Controller\\ChatController::list')) }}
	                    </div>
	                    <div class="card-footer">
                            <form id="chatForm" action="{{ path('chat-add') }}" method="post">
    		                    <div class="input-group">
    			                    <input type="text" name="message" id="chatMessage" class="form-control" placeholder="votre message..."/>
                                    <span class="input-group-btn">
                                        <input class="btn btn-success" type="submit" value="poster" />
                                    </span>
    		                    </div>
		                    </form>
	                    </div>
                    {% else %}
                        <div class="card-body">
                            <p class="text-center">Authentification is required to access the Chat</p>
                        </div>
                        <div class="footer">
                            <a href="{{path('login') }}" class="btn btn-primary">login</a>
                        </div>
                    {% endif %}
                </div>

                <div class="card">
                    <div class="card-header">
                        <p class="paneel-title"><span class="fas fa-calendar"/>Mini-Calendar</p>
                    </div>
                    <div class="card-body">
                        I assure you there will be a calendar
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}