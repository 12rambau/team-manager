{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('css/default/style.css') }}" type="text/css"/>
	<link rel='stylesheet' href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.css"/>
{% endblock %}

{% block navbar %}
	<div class="row">
		<div id="logo" class="col-3 text-center">
			<a href="{{ path('home') }}"><img class="img-fluid mb-3 mb-lg-0" src="{{ asset('image/default/no-logo.png')|imagine_filter('navbar') }}" alt=""></a>
		</div>
		<div class="jumbotron col-8">
			{% block page_title %}
				<h1>Page title</h1>
			{% endblock %}
		</div>
	</div>
	<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
		<a class="navbar-brand sr-only col-3 text-center" href="{{ path('home') }}">TeamManager</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item dropdown with-logo" id="firstLi">
					<a class="nav-link dropdown-toggle" href="#" id="dropdownCalendar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Teams
					</a>
					<div class="dropdown-menu" aria-labelledby="dropdownCalendar">
						<a class="dropdown-item" href="#">a first team</a>
						<a class="dropdown-item" href="#">another one</a>
						<a class="dropdown-item" href="#">the last one</a>
					</div>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="{{ path('blog-index') }}" id="dropdownBlog" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						News
					</a>
					<div class="dropdown-menu" aria-labelledby="dropdownBlog">
						<a class="dropdown-item" href="{{ path('blog-index') }}">Blog</a>
						<a class="dropdown-item" href="{{ path('gallery-index') }}">Gallery</a>
						<a class="dropdown-item" href="{{ path('blog-add') }}">Add new post</a>
					</div>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="dropdownCalendar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Calendar
					</a>
					<div class="dropdown-menu" aria-labelledby="dropdownCalendar">
						<a class="dropdown-item" href="{{ path('event-index') }}">List</a>
						<a class="dropdown-item" href="{{ path('event-calendar', {}) }}">Mensual Calendar</a>
						<a class="dropdown-item" href="{{ path('event-add') }}">add a new event</a>
					</div>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="dropdownCalendar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Team
					</a>
					<div class="dropdown-menu" aria-labelledby="dropdownCalendar">
						<a class="dropdown-item" href="{{ path('team-player-index', {}) }}">Player list</a>
					</div>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="{{ path('contact', {}) }}">contact</a>
				</li>
			</ul>
			<div class="navbar-nav">
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					<div class=" nav-item dropdown row">
						<img class="rounded-circle" src="{{ asset(vich_uploader_asset(app.user.profilePic, "imageFile")|imagine_filter('userNavbar')) }}" alt="">
						<a class="nav-link dropdown-toggle" href="{{ path('profile-edit', {'username':app.user.username}) }}" id="DropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							<span class="caret">{{ app.user.username }}</span>
						</a>
						<div class="dropdown-menu dropdown-menu-right" aria-labelledby="DropdownProfile">
							<a class="dropdown-item" href="{{ path('profile-edit', {'username':app.user.username}) }}">Profile</a>
							<hr/>
							<a class="dropdown-item" href="{{ path('logout') }}"><span class="fas fa-off"/>logout</a>
						</div>
					</div>
				{% else %}
					<a class="nav-item nav-link" href="{{ path('login') }}">login</a>
				{% endif %}
			</div>
			<div></nav>
		{% endblock %}

		{% block body %}
			<div class="container-fluid row">
				<div class="col-9">
					{% block content %}{% endblock %}
				</div>
				<div class="col-3">
					{% block aside %}
						<div class="card">
							<div class="card-header">
								<p class="card-title"><span class="fas fa-calendar"/>
									Mini-Calendar</p>
							</div>
							<div class="card-body">
								<div id="mini-calendar"></div>
							</div>
						</div>
					{% endblock %}
					{% block chat %}
						<div class="card">
							<div class="card-header">
								<p class="card-title"><span class="fas fa-comment"/>
									Chat</p>
							</div>
							{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
								<div id="chatwindow" class="card-body">
									{{ render(controller('App\\Controller\\ChatController::list')) }}
								</div>
								<div class="card-footer">
									<form id="chatForm" action="{{ path('chat-add') }}" method="post">
										<div class="input-group">
											<input type="text" name="message" id="chatMessage" class="form-control" placeholder="votre message..."/>
											<span class="input-group-btn">
												<input class="btn btn-success" type="submit" value="poster"/>
											</span>
										</div>
									</form>
								</div>
							{% else %}
								<div class="card-body">
									<p class="text-center">Authentification is required to access the Chat</p>
								</div>
								<div class="footer">
									<div class="container text-center">
										<a href="{{path('login') }}" class="btn btn-primary">login</a>
									</div>
								</div>
							{% endif %}
						</div>
					{% endblock %}
				</div>
			</div>
		{% endblock %}

		{% block javascripts %}

			{{ parent() }}

			<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.js"></script>
			<script src="{{ asset('js/fullcalendar/miniCalendar.js') }}"></script>
			<script src="{{ asset('js/default/default.js') }}"></script>

			<script type="text/javascript">
				$(document).ready(function () {
$('[data-toggle="tooltip"]').tooltip();
});
			</script>
		{% endblock %}
